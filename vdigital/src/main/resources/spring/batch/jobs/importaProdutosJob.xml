<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- xmlns 'inline' para evitar namespaces como 'batch:job', 'batch:step',... -->
	<job id="importaProdutosJob" xmlns="http://www.springframework.org/schema/batch">
		<step id="importaProdutos">
			<tasklet>
				<chunk reader="itemReader" writer="itemWriter" commit-interval="2" />
				<listeners>
					<listener ref="produtoItemLogger" />
				</listeners>
			</tasklet>
		</step>
	</job>

	<!-- <bean id="produtoFile"   ###extrair depois o value da propertie resource abaixo!!
		class="org.springframework.core.io.FileSystemResource" scope="step">
		<beans:constructor-arg value="#{jobParameters[produtoFile]}"/>
	</bean> -->

	<bean id="itemReader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
		<property name="resource" value="file:#{jobParameters['inputFile']}" /> <!-- ref="produtoFile" -->
		<property name="linesToSkip" value="1" />
		<property name="lineMapper">
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<property name="lineTokenizer">
					<bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="names"
							value="id,fornecedor,nome,valorCompra,valorVenda,quantMaxDepo,
							quantMaxLoja,quantAtualDepo,quantAtualLoja,pontoRessuprimento,pontoReposicao" />
					</bean>
				</property>
				<property name="fieldSetMapper">
					<bean class="com.br.projetandoo.vdigital.spring.batch.ProdutoFieldSetMapper" />
				</property>
			</bean>
		</property>
	</bean>

	<bean id="itemWriter"
		class="com.br.projetandoo.vdigital.spring.batch.ProdutoItemWriter">
		<constructor-arg ref="dataSource" />
	</bean>

	<bean id="produtoItemLogger"
		class="com.br.projetandoo.vdigital.spring.batch.ProdutoItemListener" />

</beans>